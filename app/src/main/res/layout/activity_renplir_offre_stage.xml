<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RenplirOffreStage"
    android:background="@drawable/background"
    android:padding="30dp">

    <TextView
        android:id="@+id/creationoffre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Poster une offre"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationoffre"
        android:hint="name"
        android:textSize="24dp" />
    <EditText
        android:id="@+id/emailCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:hint="email"
        android:layout_below="@+id/companyName"/>

    <EditText

        android:id="@+id/Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailCompany"
        android:hint="Contact"
        android:textSize="24dp" />
    <Button
        android:id="@+id/buttonPosterOffre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contact"
        android:text="poster offre"
        android:layout_marginTop="20dp"/>

</RelativeLayout>